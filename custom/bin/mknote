#! /usr/bin/env zsh

# Make note
[[ $# -gt 1 ]] && \
    ec $red "[mknote]: Too many arguments. Provide just the note name or no arguments."

local date="$(date +%y%m%d)"
local time="$(date +%H%M)"

local fileName="${date}${time}"

[[ -n "$1" ]] && \
    fileName+="--$1"

fileName+=".md"

# TODO: Treat title chars: 
# Allow only alphanumeric chars and capitalize initials
echo "# $1\n" >> "./${fileName}"
# echo "# Date: ${date} -- ${time}\n\n" >> "./${fileName}"
nvim "./${fileName}"
