#! /usr/bin/env zsh

# note taking
[[ $# -gt 1 ]] && ec "${red}" "[mknote]: Too many arguments. Provide just a note name or no arguments."
local date="$(date +%y%m%d)"
local time="$(date +%H%M)"
local fileName="${date}${time}"
[[ -n "$1" ]] && fileName+="--$1"
fileName+=".md"
echo "# Title: $1\n# Date: ${date} -- ${time}\n\n" \
    >> "./${fileName}"
nvim "./${fileName}"
